{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd chat-ui && npm ci && npm run build",
    "nixpacksConfig": {
      "node-version": "20.0.0"
    }
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "cd chat-ui && npm run start",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
} 